<h1>SIGN UP</h1>
<%= form_for @user do |f| %>

<% if @user.errors.any? %>
<div id="error_explanation">
  <h3>
<%= pluralize(@user.errors.count,"error") %>
prohibited this user from being saved:
</h3>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
</div>
<%end%>

<div class="row">
<div class="col-md-6 col-md-offset-3">

    <%= f.label :first_name %>
    <%= f.text_field :first_name , placeholder: "Firstname" %>
  

  
    <%= f.label :last_name %>
    <%= f.text_field :last_name , placeholder: "Lastname" %>
</div></div>
  
  <p>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Email" %>
  </p>

 
    <%= f.label :what_you_are? %><br />
    <%= f.label :autolyse, "Project Owner", :value => "true"  %>
    <%= f.radio_button :isowner, true %>
    <%= f.label :autolyse, "Developer", :value => "false" %>
    <%= f.radio_button :isowner, false, :checked => true %>


  <p>
    <%= f.label :password %>
    <%= f.password_field :password , placeholder: "Password" %>
  </p>
  
  <p>
    <%= f.submit "Sign Up",class: "btn btn-primary" %>
  </p>
  
<%end%>